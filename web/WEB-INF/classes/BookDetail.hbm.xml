<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Ticholas.Bean.BookInfo" table="getbookdetail">
        <id name="ISBN" type="java.lang.String" column="isbn">
        </id>
        <property name="bookname" not-null="true" type="java.lang.String" column="bookname"/>
        <property name="category" not-null="false" type="java.lang.String" column="category"/>
        <property name="price" not-null="true" type="java.lang.Float" column="price" precision="10" scale="2"/>
        <property name="stockQuantity" not-null="true" type="java.lang.Integer" column="stock"/>
    </class>
</hibernate-mapping>